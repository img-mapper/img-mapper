{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.mjs",
    "**/*.mts",
    ".vitepress/**/*.ts",
    ".vitepress/**/*.mts"
  ],
  "exclude": ["node_modules", "dist"]
}
