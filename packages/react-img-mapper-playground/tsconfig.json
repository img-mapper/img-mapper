{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "lib": ["dom", "dom.iterable", "esnext"],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["../src/*"],
      "@playground/*": ["./src/*"],
      "@resources/*": ["../resources/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.mjs", "**/*.mts"],
  "exclude": ["node_modules"]
}
